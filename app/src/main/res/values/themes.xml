<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChessClock" parent="BaseAppTheme">

    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="materialAlertDialogTheme">@style/RoundedDialogTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PlayerTimeTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTurnNumberTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerNameTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/AppbarTitleAppearance</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppbarTitleAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="RoundedDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/RoundedDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/RoundedDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/RoundedDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/RoundedDialogButton</item>
        <item name="materialAlertDialogBodyTextStyle">@style/ConfirmDialogBodyAppearance</item>
        <item name="shapeAppearanceOverlay">@style/RoundedDialogShape</item>
        <item name="colorPrimary">@color/primary_text</item>
        <item name="android:background">@color/dialog_background</item>
    </style>

    <style name="RoundedDialogShape" parent="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dialog_corners</item>
    </style>

    <style name="RoundedDialogButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextPrimaryAppearance</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RoundedDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/DialogTitleAppearance</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ConfirmDialogBodyAppearance" parent="TextSecondaryAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecondaryAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextPrimaryAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="DialogTitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="expandedHintEnabled">true</item>
        <item name="boxBackgroundColor">@color/window_background</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="expandedHintEnabled">true</item>
        <item name="boxBackgroundColor">@color/window_background</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>