<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/dest_game">

    <fragment
        android:id="@+id/dest_game"
        android:name="com.betterlifeapps.chessclock.ui.game.GameFragment"
        tools:layout="@layout/fragment_game"/>

    <fragment
        android:id="@+id/dest_settings"
        android:name="com.betterlifeapps.chessclock.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_new_time_control"
            app:destination="@id/dest_edit"/>

        <action
            android:id="@+id/action_edit_time_control"
            app:destination="@id/dest_edit"/>

    </fragment>

    <fragment
        android:id="@+id/dest_edit"
        android:name="com.betterlifeapps.chessclock.ui.settings.edit.EditFragment"
        tools:layout="@layout/fragment_edit"/>

</navigation>